// Base Styles

red = #e67e22
//#D82545 
purple = #AD2BAD
blue = #DEF
pink = #F71568
green = #A0B046
lightgrey = #EEE

*
  box-sizing: border-box
  outline: none

a:focus
a:active
  outline: none

html,
body
    height 100%
    width 100%

body
    text-rendering optimizeLegibility

a,
a:visited
    color #0086cc
    text-decoration none

    &:hover
        text-decoration underline

// Animations

@keyframes fadein
    from
        opacity: 0
    to
        opacity: 1

@keyframes pullin
    from
        box-shadow: 0
    to
        box-shadow: inset 4px 4px 10px #888, 0px 0px 5px rgba(255, 255, 255, 1)

// Buttons

button
    background-color: red
    transition: background-color 200ms linear
    border-radius: 0
    border: 0
    padding: 10px
    margin: 10px
    color: white
    font-weight: bold

button.smaller
    padding: 3px

button:hover
    background-color: purple
    transition: background-color 200ms linear

button:active
    background-color: purple - 10%
    transition: background-color 200ms linear
    box-shadow: inset 3px 3px 3px rgba(0, 0, 0, 0.2)

textarea
    border: 1px solid grey
    margin: 10px
    border-radius: 0em
    padding: 5px
    border: 1px solid #DDD
    box-shadow: inset 3px 3px 3px rgba(0, 0, 0, 0.1)
    width: 600px

textarea:focus
textarea:active
textarea:hover
    border: 1px solid purple

input
    outline: 0


// Helpers

.date
    display: inline-block

.middle
    padding-top: 20%
    
.pa1
    padding: 10px

.pt05
    padding-top: 5px

.success
    color: green

.error
    color: pink

.full-size
    width: 100%
    height: 100%

.full-height
    height: 100%

.field
    box-shadow: inset 3px 3px 3px rgba(0, 0, 0, 0.2)
    padding-left: 10px

.toggle-button
    background-color: black
    box-shadow: 3px 3px 3px rgba(0, 0, 0, 0.2)
    transition: background-color 200ms linear

.toggle-button:hover
    background: purple
    transition: background-color 200ms linear

.toggle-button.selected
    background-color: blue
    color: blue - 80%
    box-shadow: none
    transition: background-color 200ms linear

.toggle-button.selected:hover
    background: purple
    color: white
    transition: background-color 200ms linear

.simple-row
    border-top: 1px solid #DDD

.full-size
    width: 100%
    height: 100%
